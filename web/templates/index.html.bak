        const items = data.interests || [];

        if (!items.length) {
            document.getElementById('interestList').innerHTML = '<div class="empty-state"><div class="icon">â­</div><p>Interests develop through repeated conversations</p></div>';
            return;
        }

        document.getElementById('interestList').innerHTML = items.map(i => `
            <div class="interest-item">
                <span class="interest-topic">${i.topic}</span>
                <span class="interest-level level-${i.level}">${i.level}</span>
                <span class="interest-count">${i.mentions}Ã—</span>
            </div>`).join('');
    } catch (e) {
        document.getElementById('interestList').innerHTML = '<div class="empty-state"><p>âš  Phase 2 not active</p></div>';
    }
}

